<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

   tools:context="plkhealth.it.app.patientbook.MainActivity"
   tools:showIn="@layout/activity_main">


   <TableLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:stretchColumns="*">


       <TableRow android:paddingBottom="15dp">

           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:orientation="vertical">

               <ImageButton
                   android:id="@+id/btn_personal_info"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center_horizontal"
                   android:background="#00000000"
                   android:onClick="btnPersonalInfo_Click"
                   android:src="@mipmap/ic_launcher" />

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center_horizontal"
                   android:padding="2dip"
                   android:text="ข้อมูลส่วนตัว" />
           </LinearLayout>

           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:orientation="vertical">

               <ImageButton
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center_horizontal"
                   android:background="#00000000"
                   android:src="@mipmap/ic_launcher" />

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center_horizontal"
                   android:padding="2dip"
                   android:text="โรคประจำตัว" />
           </LinearLayout>

           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:orientation="vertical">

               <ImageButton
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center_horizontal"
                   android:background="#00000000"
                   android:src="@mipmap/ic_launcher" />

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center_horizontal"
                   android:padding="2dip"
                   android:text="แพ้ยา" />
           </LinearLayout>


       </TableRow>

       <TableRow android:paddingBottom="15dp">

           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:orientation="vertical">

               <ImageButton
                   android:id="@+id/btn_appointment"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center_horizontal"
                   android:background="#00000000"
                   android:src="@mipmap/ic_launcher" />

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center_horizontal"
                   android:padding="2dip"
                   android:text="หมอนัด(N)" />
           </LinearLayout>

           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:orientation="vertical">

               <ImageButton
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center_horizontal"
                   android:background="#00000000"
                   android:src="@mipmap/ic_launcher" />

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center_horizontal"
                   android:padding="2dip"
                   android:text="ญาติ/คนรู้จัก" />
           </LinearLayout>

           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:orientation="vertical">

               <ImageButton
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center_horizontal"
                   android:background="#00000000"
                   android:src="@mipmap/ic_launcher" />

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center_horizontal"
                   android:padding="2dip"
                   android:text="โรงพยาบาล" />
           </LinearLayout>


       </TableRow>

       <TableRow android:paddingBottom="15dp">


           <LinearLayout

               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:orientation="vertical">

               <ImageButton
                   android:id="@+id/btn_promotion"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center_horizontal"
                   android:background="#00000000"
                   android:src="@mipmap/ic_launcher" />

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center_horizontal"
                   android:padding="2dip"
                   android:text="คำแนะนำ" />
           </LinearLayout>

           <LinearLayout

               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:orientation="vertical">

               <ImageButton
                   android:id="@+id/btn_talk_doctor"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center_horizontal"
                   android:background="#00000000"
                   android:src="@mipmap/ic_launcher" />

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center_horizontal"
                   android:padding="2dip"
                   android:text="คุยกับหมอ" />
           </LinearLayout>


           <LinearLayout

               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:orientation="vertical"
             >

               <ImageButton
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center_horizontal"
                   android:background="#00000000"
                   android:src="@mipmap/ic_launcher" />

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center_horizontal"
                   android:padding="2dip"
                   android:text="ยา" />
           </LinearLayout>


       </TableRow>

       <TableRow android:paddingBottom="15dp">


           <LinearLayout

               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:orientation="vertical">

               <ImageButton
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center_horizontal"
                   android:background="#00000000"
                   android:src="@mipmap/ic_launcher" />

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center_horizontal"
                   android:padding="2dip"
                   android:text="ประวัติป่วย" />
           </LinearLayout>

           <LinearLayout

               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               >

               <ImageButton
                   android:id="@+id/btn_lab_result"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center_horizontal"
                   android:background="#00000000"
                   android:src="@mipmap/ic_launcher" />

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center_horizontal"
                   android:padding="2dip"
                   android:text="ผลแล็บ" />
           </LinearLayout>

           <LinearLayout

               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:orientation="vertical">

               <ImageButton
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center_horizontal"
                   android:background="#00000000"
                   android:src="@mipmap/ic_launcher" />

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center_horizontal"
                   android:padding="2dip"
                   android:text="บันทึกตนเอง" />
           </LinearLayout>





       </TableRow>

   </TableLayout>


</RelativeLayout>
